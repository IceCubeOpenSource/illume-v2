{
    "builders": [
        {
            "type": "openstack",
            "flavor": "c4-29gb-850-1.1080ti",
            "ssh_username": "ubuntu",
            "image_name": "illume-worker-gpu-interactive",
            "source_image_name": "illume-worker-gpu",
            "source_image_filter": {
                "most_recent": true
            },
            "force_delete": true,
            "networks": [
                "ddbdc508-53dd-4a4f-8be7-c6555fefda62"
            ],
            "floating_ip_network": "ext-net",
            "reuse_ips": true,
            "security_groups": ["ssh", "egress"]
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "../../bootstrap/htcondor/local_configs/execute-interactive.local",
            "destination": "/home/ubuntu/condor_config.local"
        },
        {
            "type": "shell",
            "inline": ["sudo mv /home/ubuntu/condor_config.local /etc/condor/condor_config.local"]
        }
    ]
}
